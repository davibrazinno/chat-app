    "license": "MIT",
    "dependencies": {
        "@fast-csv/parse": "^4.3.6",
        "amqplib": "^0.8.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "concurrently": "^5.3.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "fast-csv": "^4.3.6",
        "http": "0.0.0",
        "is-empty": "^1.2.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.10.9",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "socket.io": "^2.3.0",
        "validator": "^11.1.0"
    },
    "devDependencies": {
        "eslint": "^7.17.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.21.4",
        "eslint-plugin-react-hooks": "^1.7.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.5",
        "supertest": "^6.0.1"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
